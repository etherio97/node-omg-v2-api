{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": false,
    "declarationMap": false,
    "rootDir": "./",
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@types/express"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"]
    }
  }
}
